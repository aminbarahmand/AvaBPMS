@{
    ViewData["Title"] = "Workflow Test Page";
}
@model AvaBPMS.Application.Models.WorkFlowStepDto
<div class="text-center">
    <h1 class="display-4">User Activity : @ViewBag.NodeTitle</h1>
    
    <div >
         <form method="post">
           <h5>Form Data And Actions</h5>
         </form>
         <div class="row">
             <div class="col-12 h5">Work Flow Command</div>
             <div class="col">
                <div id="detailList">

                </div>
             </div>
         </div>
       
      
       
    </div>
</div>
@section Scripts
{
    
    <script type="text/javascript">

        function getUrlVars() {
            var vars = [], hash;
            var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
            for (var i = 0; i < hashes.length; i++) {
                hash = hashes[i].split('=');
                vars.push(hash[0]);
                vars[hash[0]] = hash[1];
            }
            return vars;
        }
         
        function ReCreateDetailList() {

            var data = {
                StepId: @Model.Id,
            };
            console.log(data);
            if (data.StepId != undefined) {
                $.ajax({
                    url: '/TestComplexWF/GetWorkFlowCommands/',
                    contentType: 'application/html',
                    data: data,
                    success: function (response) {

                        $('#detailList').html(response);
                       

                    },

                    error: function (e) {

                        alert(e.message);
                    }

                });
            }

        }
        ReCreateDetailList();
    </script>
}