@{
    ViewData["Title"] = "Workflow Test Page";
}
@model ICollection<AvaBPMS.Application.Models.WorkFlowInstanseDto>
<div class="container">
    <h1 class="display-4">Test Workflow</h1>
    <p>
        Start New  <a href="TestWF/CreateNewInstance/" class="btn btn-success m-1">Instanse</a>.<br />

        view as <a href="TestWF/UserView?UserId=User1" class="btn btn-danger m-1">User1</a><br />

        view as <a href="TestWF/UserView?UserId=User2" class="btn btn-danger m-1">User2</a><br />
    </p>
    <p>
        <h5>Created Instanse</h5>
    </p>
    <div >
        <table class="table table-responsive">
            @foreach (var item in Model)
            {
                <tr><td>@item.Id</td><td>@item.PoolTitle</td><td>@item.AssignDate</td>
                    <td>
                        @if(!item.IsStarted)
                        {
                            <a href="TestWF/StartWorkFlow/@item.Id">Start WorkFlow</a>
                        }
                    </td>
                </tr>
            }
        </table>
        
    </div>
</div>
